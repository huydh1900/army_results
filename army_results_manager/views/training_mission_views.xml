<odoo>

    <record id="view_training_mission_tree" model="ir.ui.view">
        <field name="name">training.mission.tree</field>
        <field name="model">training.mission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="course_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'approved'"/>
            </tree>
        </field>
    </record>

    <record id="view_training_mission_form" model="ir.ui.view">
        <field name="name">training.mission.form</field>
        <field name="model">training.mission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_camera"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                string="Mở camera"
                                attrs="{'invisible': [('camera_count', '=', 0)]}">
                            <field name="camera_count" widget="statinfo" string="Camera"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="lesson_id"/>
                            <field name="course_id" options="{'no_create':True, 'no_edit':True}"/>
                            <field name="description"/>
                            <field name="goal"/>
                            <field name="location_ids" widget="many2many_tags"/>
                            <field name="camera_ids" widget="many2many_tags"/>
                            <field name="create_uid" string="Người tạo" readonly="1" options="{'no_open':True}"/>
                            <field name="create_date" widget="date" string="Ngày tạo" readonly="1"/>
                            <field name="exclude_main_training"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="total_hours"/>
                            <field name="training_officer_ids_domain" invisible="1"/>
                            <field name="training_officer_ids" widget="many2many_tags"
                                   domain="[('id', 'in', training_officer_ids_domain)]" options="{'no_create':True}"/>
                            <field name="student_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ngày huấn luyện">
                            <field name="day_ids">
                                <tree editable="bottom" default_order="day asc">
                                    <field name="day"/>
                                    <field name="week" force_save="1"/>
                                    <field name="month" force_save="1"/>
                                    <field name="total_hours"/>
                                    <field name="state" widget="badge"
                                           decoration-muted="state == 'draft'"
                                           decoration-success="state == 'approved'"/>
                                    <button name="action_detail"
                                            type="object"
                                            class="oe_stat_button"
                                            title="Chi tiết"
                                            icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tài liệu/Video">
                            <field name="material_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="video" widget="video" filename="filename"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>