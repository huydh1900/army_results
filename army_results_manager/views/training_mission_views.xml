<odoo>

    <record id="view_training_mission_tree" model="ir.ui.view">
        <field name="name">training.mission.tree</field>
        <field name="model">training.mission</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="name"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'in_progres'"
                       decoration-warning="state == 'done'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_training_mission_form" model="ir.ui.view">
        <field name="name">training.mission.form</field>
        <field name="model">training.mission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_progress,done,cancel"
                           statusbar_colors="{'done':'green','cancel':'red'}"/>

                    <button name="action_in_progress" type="object"
                            string="Bắt đầu" states="draft" class="btn-primary"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander_assistant"/>

                    <button name="action_done" type="object"
                            string="Hoàn thành" states="in_progress" class="btn-success"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander_assistant"/>

                    <button name="action_cancel" type="object"
                            string="Hủy" states="draft,in_progress" class="btn-secondary"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander_assistant"/>

                    <button name="action_reset_draft" type="object"
                            string="Đặt lại Dự thảo" states="cancel,done" class="btn-secondary"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander_assistant"/>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject_id" options="{'not_delete': True}"/>
                            <field name="description"/>
                            <field name="create_uid" string="Người tạo" readonly="1"/>
                            <field name="create_date" widget="date" string="Ngày tạo" readonly="1"/>
                            <field name="exclude_main_training"/>
                        </group>
                        <group>
                            <field name="total_hours"/>
                            <field name="training_officer_ids_domain" invisible="1"/>
                            <field name="training_officer_ids" widget="many2many_tags"
                                   domain="[('id', 'in', training_officer_ids_domain)]" options="{'no_create':True}"/>
                            <field name="student_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết nhiệm vụ huấn luyện">
                            <field name="mission_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="total_hours"/>
                                    <button name="action_detail"
                                            type="object"
                                            class="oe_stat_button"
                                            title="Chi tiết"
                                            icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tài liệu/Video">
                            <field name="material_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="file" filename="name" widget="binary"/>
                                    <field name="video" widget="video" filename="filename"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>