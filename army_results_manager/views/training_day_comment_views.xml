<odoo>
    <record id="view_training_day_comment_tree" model="ir.ui.view">
        <field name="name">training.day.comment.tree</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0">
                <field name="student_id" readonly="1"/>
                <field name="score"/>
                <field name="comment"/>
                <button name="action_open_comment"
                        string="Nhận xét"
                        type="object"
                        groups="army_results_manager.group_training_commander_assistant"
                        class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="training_day_comment_view_search" model="ir.ui.view">
        <field name="name">training.day.comment.view.search</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <search>
                <field name="day_date"/>
                <field name="student_id"/>
            </search>
        </field>
    </record>

    <record id="view_training_day_comment_form" model="ir.ui.view">
        <field name="name">training.day.comment.form</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="student_id" readonly="True"/>
                    <field name="score"/>
                    <field name="strength"/>
                    <field name="weakness"/>
                    <field name="video" widget="video" filename="filename"/>
                </group>
            </form>
        </field>
    </record>

    <record id="training_day_comment_view_search" model="ir.ui.view">
        <field name="name">training.day.comment.view.search</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id" string="Tên học viên" filter_domain="[('student_id.name', 'ilike', self)]"/>
                <field name="day_date" string="Ngày" filter_domain="[('day_date', 'ilike', self)]"/>
                <filter name="group_student_id" string="Nhóm theo tên học viên" context="{'group_by':'student_id'}"/>
                <filter name="day_date" string="Nhóm theo ngày" context="{'group_by':'day_date'}"/>
            </search>
        </field>
    </record>
</odoo>
