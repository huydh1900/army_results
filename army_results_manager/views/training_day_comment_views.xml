<odoo>
    <record id="view_training_day_comment_tree" model="ir.ui.view">
        <field name="name">training.day.comment.tree</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0">
                <field name="student_id" readonly="1" options="{'no_open': True}"/>
                <field name="score"/>
                <field name="comment"/>
                <field name="training_officer_ids" widget="many2many_tags"/>
                <field name="proposal_solution"/>
                <button name="action_open_comment"
                        string="Nhận xét"
                        type="object"
                        groups="army_results_manager.group_training_commander_assistant,army_results_manager.group_admin"
                        class="btn-primary"/>

                <button name="action_gen_proposal_solution"
                        string="Đề xuất HL nâng cao"
                        type="object"
                        groups="army_results_manager.group_training_commander_assistant,army_results_manager.group_admin"
                        class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="view_training_day_comment_form" model="ir.ui.view">
        <field name="name">training.day.comment.form</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="student_id" readonly="True"/>
                    <field name="score"/>
                    <field name="strength"/>
                    <field name="weakness"/>
                    <field name="proposal_solution"/>


                    <!--                    <field name="video" widget="video" filename="filename"/>-->
                </group>
                <notebook>
                    <page name="Danh sách hình ảnh, video">
                        <field name="resource_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="description"/>
                                <field name="type"/>
                                <field name="file" filename="file_name" widget="binary"
                                       attrs="{'invisible':[('type','=','video')]}"/>
                                <field name="video" widget="video" filename="file_name"
                                       attrs="{'invisible':[('type','=','document')]}"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="training_day_comment_view_search" model="ir.ui.view">
        <field name="name">training.day.comment.view.search</field>
        <field name="model">training.day.comment</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id" string="Tên học viên" filter_domain="[('student_id.name', 'ilike', self)]"/>
                <field name="day_date" string="Ngày" filter_domain="[('day_date', 'ilike', self)]"/>
                <field name="score" string="Điểm số" filter_domain="[('score', 'ilike', self)]"/>
                <filter name="day_date" string="Nhóm theo ngày" context="{'group_by':'day_date'}"/>
                <filter name="lesson_name" string="Nhóm theo nhiệm vụ huấn luyện" context="{'group_by':'lesson_name'}"/>
                <filter name="group_student_id" string="Nhóm theo tên học viên" context="{'group_by':'student_id'}"/>
            </search>
        </field>
    </record>
</odoo>
