<odoo>

    <record id="view_training_mission_line_tree" model="ir.ui.view">
        <field name="name">training.mission.line.tree</field>
        <field name="model">training.mission.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="total_hours"/>
            </tree>
        </field>
    </record>

    <record id="view_training_mission_line_form" model="ir.ui.view">
        <field name="name">training.mission.line.form</field>
        <field name="model">training.mission.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="mission_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="training_officer_ids_domain" invisible="1"/>
                            <field name="training_officer_ids" widget="many2many_tags"
                                   domain="[('id', 'in', training_officer_ids_domain)]"/>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ngày huấn luyện">
                            <field name="day_ids">
                                <tree editable="bottom" default_order="day asc">
                                    <field name="day"/>
                                    <field name="week" force_save="1"/>
                                    <field name="month" force_save="1"/>
                                    <field name="total_hours"/>
                                    <field name="state" widget="badge"
                                           decoration-muted="state == 'draft'"
                                           decoration-success="state == 'approved'"/>
                                    <button name="action_detail"
                                            type="object"
                                            class="oe_stat_button"
                                            title="Chi tiết"
                                            icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>