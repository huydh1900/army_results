<odoo>

    <record id="view_training_day_gantt" model="ir.ui.view">
        <field name="name">training.day.gantt</field>
        <field name="model">training.day</field>
        <field name="arch" type="xml">
            <gantt
                    date_start="day"
                    date_stop="day"
                    cell_create="false"
                    create="false"
                    edit="false"
                    string="Lịch huấn luyện">
                <field name="lesson_name"/>

                <templates>
                    <div t-name="gantt-popover" class="container-fluid">
                        <li>
                            <strong>Tên bài học:
                                <t t-out="lesson_name"/>
                            </strong>
                        </li>
                    </div>
                </templates>
            </gantt>

        </field>
    </record>

    <record id="view_training_day_form" model="ir.ui.view">
        <field name="name">training.day.form</field>
        <field name="model">training.day</field>
        <field name="arch" type="xml">
            <form string="Ngày huấn luyện">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_camera"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                string="Mở camera"
                                attrs="{'invisible': [('camera_count', '=', 0)]}">
                            <field name="camera_count" widget="statinfo" string="Camera"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="day" readonly="True"/>
                            <field name="plan_name"/>
                            <field name="course_name"/>
                            <field name="mission_name"/>
                        </group>
                        <group>
                            <field name="training_officer_ids" widget="many2many_tags"/>
                            <field name="student_ids" widget="many2many_tags"/>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thời gian huấn luyện">
                            <field name="time_ids">
                                <tree editable="bottom">
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="duration_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_training_day_tree_report" model="ir.ui.view">
        <field name="name">training.day.tree.report</field>
        <field name="model">training.day</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo" create="0" export_xlsx="0" delete="0" default_order="month,week,day">
                <field name="day"/>
                <field name="plan_name"/>
                <field name="lesson_name"/>
                <field name="total_hours"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-success="state == 'approved'"
                       decoration-warning="state == 'to_modify'"/>
            </tree>
        </field>
    </record>

    <record id="view_training_day_in_plan_tree" model="ir.ui.view">
        <field name="name">training.day.in.plan.tree</field>
        <field name="model">training.day</field>
        <field name="arch" type="xml">
            <tree create="0" export_xlsx="0" delete="0" default_order="month,week,day">
                <field name="day"/>
                <field name="lesson_name"/>
                <field name="total_hours"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-success="state == 'approved'"
                       decoration-warning="state == 'to_modify'"/>
            </tree>
        </field>
    </record>

    <record id="training_day_view_search" model="ir.ui.view">
        <field name="name">training.day.view.search</field>
        <field name="model">training.day</field>
        <field name="arch" type="xml">
            <search>
                <filter name="group_lesson_name" string="Nhóm theo Bài học" context="{'group_by':'lesson_name'}"/>
                <filter name="group_year" string="Nhóm theo Năm" context="{'group_by':'year'}"/>
                <filter name="group_month" string="Nhóm theo Tháng" context="{'group_by':'month_name'}"/>
                <filter name="group_week" string="Nhóm theo Tuần" context="{'group_by':'week'}"/>
                <filter name="group_weekday" string="Nhóm theo Thứ" context="{'group_by':'weekday'}"/>
            </search>
        </field>
    </record>

    <record id="training_day_tree_inherit_js_class" model="ir.ui.view">
        <field name="name">training.day.tree.report</field>
        <field name="model">training.day</field>
        <field name="inherit_id" ref="army_results_manager.view_training_day_tree_report"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">button_in_tree</attribute>
            </xpath>
        </field>
    </record>

    <record id="training_day_tree_plan_inherit_js_class" model="ir.ui.view">
        <field name="name">training.day.tree.plan</field>
        <field name="model">training.day</field>
        <field name="inherit_id" ref="army_results_manager.view_training_day_in_plan_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">button_in_tree</attribute>
            </xpath>
        </field>
    </record>

</odoo>