<odoo>
    <record id="view_training_content_tree" model="ir.ui.view">
        <field name="name">training.content.template.tree</field>
        <field name="model">training.content.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_training_content_form" model="ir.ui.view">
        <field name="name">training.content.template.form</field>
        <field name="model">training.content.template</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch huấn luyện">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh sách nội dung huấn luyện">
                            <field name="line_ids">
                                <tree>
                                    <field name="section_id"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>