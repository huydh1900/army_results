<odoo>
    <record id="view_training_course_tree" model="ir.ui.view">
        <field name="name">training.course.tree</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="plan_id" string="Tên kế hoạch"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch huấn luyện">
                <div class="oe_button_box" name="button_box">
                    <button name="action_open_students"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-users">
                        <field name="student_count" widget="statinfo" string="Học viên"/>
                    </button>
                    <button name="action_open_result_training"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list-alt"
                            attrs="{'invisible': [('student_count', '=', 0)]}"
                            title="Kết quả huấn luyện"
                            string="Kết quả huấn luyện"/>
                </div>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="participants_ids" widget="many2many_tags"/>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="participant_category_id"/>
                        <field name="responsible_level_id"/>
                        <field name="measure"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="total_hours"/>
                    </group>
                </group>
                <notebook>
                    <page string="Danh sách nhiệm vụ huấn luyện">
                        <field name="mission_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="total_hours"/>
                                <button name="action_detail"
                                        type="object"
                                        class="oe_stat_button"
                                        title="Chi tiết"
                                        icon="fa-eye"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>