<odoo>
    <record id="view_camera_device_form" model="ir.ui.view">
        <field name="name">camera.device.form</field>
        <field name="model">camera.device</field>
        <field name="arch" type="xml">
            <form string="Camera">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_camera"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                attrs="{'invisible': [('state', '!=', 'ok')]}"
                                string="Xem camera"/>
                        <button name="check_camera_status_digest"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-plug"
                                string="Kiểm tra kết nối"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ip_address"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="location_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_camera_device_tree" model="ir.ui.view">
        <field name="name">camera.device.tree</field>
        <field name="model">camera.device</field>
        <field name="arch" type="xml">
            <tree string="Camera">
                <field name="name"/>
                <field name="location_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'ok'"
                       decoration-danger="state == 'error'"
                       decoration-warning="state == 'not_connect'"/>
            </tree>
        </field>
    </record>

    <record id="view_camera_device_tree_inherit_js_class" model="ir.ui.view">
        <field name="name">camera.device.tree</field>
        <field name="model">camera.device</field>
        <field name="inherit_id" ref="army_results_manager.view_camera_device_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">button_in_tree</attribute>
            </xpath>
        </field>
    </record>
</odoo>
