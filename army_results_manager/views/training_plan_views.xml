<odoo>
    <record id="view_training_plan_tree" model="ir.ui.view">
        <field name="name">training.plan.tree</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <tree string="Kế hoạch huấn luyện">
                <field name="plan_code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="location_id"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'posted'"
                       decoration-warning="state == 'to_modify'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_training_plan_form" model="ir.ui.view">
        <field name="name">training.plan.form</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch huấn luyện">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_post"
                            string="Gửi duyệt"
                            type="object"
                            states="draft,to_modify"
                            class="btn-primary"/>

                    <button name="action_approve"
                            string="Phê duyệt"
                            type="object"
                            states="posted,to_modify"
                            groups="army_results_manager.group_training_commander"
                            class="btn-success"/>

                    <button name="action_open_modify_wizard"
                            string="Yêu cầu chỉnh sửa"
                            type="object"
                            states="posted"
                            class="btn-warning"/>

                    <button name="action_cancel"
                            string="Hủy"
                            type="object"
                            states="draft,posted,to_modify"
                            class="btn-danger"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_camera"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                string="Mở camera">
                            <field name="camera_count" widget="statinfo" string="Camera"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="plan_code" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="name" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="type" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="location_id" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="description" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="training_content" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                        <group>
                            <field name="start_date" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="end_date" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="year" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="total_hours"/>
                            <field name="participants_ids" widget="many2many_tags" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="student_ids" widget="many2many_tags" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Huấn luyện chung">
                            <field name="common_subject_ids" attrs="{'readonly': [('state', '=', 'approved')]}">
                                <tree editable="bottom" no_open="1">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_hours"/>
                                    <button name="action_detail"
                                            type="object"
                                            class="oe_stat_button"
                                            title="Chi tiết"
                                            icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Huấn luyện riêng">
                            <field name="specific_subject_ids" attrs="{'readonly': [('state', '=', 'approved')]}">
                                <tree editable="bottom" no_open="1">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_hours"/>
                                    <button name="action_detail"
                                            type="object"
                                            class="oe_stat_button"
                                            title="Chi tiết"
                                            icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lý do chỉnh sửa">
                            <field name="reason_modify"/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_training_plan_gantt" model="ir.ui.view">
        <field name="name">training.plan.gantt</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <gantt date_start="start_date" date_stop="end_date" default_group_by="create_date" create="0">
                <field name="create_date"/>
                <field name="description"/>
            </gantt>
        </field>
    </record>

    <record id="view_training_plan_calendar" model="ir.ui.view">
        <field name="name">training.plan.calendar</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <calendar
                    string="Lịch huấn luyện"
                    date_start="start_date"
                    date_stop="end_date"
                    color="participants_ids"
                    mode="month"
                    quick_add="false"
            >
                <field name="name"/>
                <field name="participants_ids"/>
            </calendar>
        </field>
    </record>

    <record id="view_training_plan_search" model="ir.ui.view">
        <field name="name">training.plan.search</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <search string="Tìm kế hoạch huấn luyện">
                <field name="name" string="Tên kế hoạch"/>
                <field name="start_date" string="Ngày bắt đầu"/>
                <field name="end_date" string="Ngày kết thúc"/>
            </search>
        </field>
    </record>
</odoo>

