<odoo>
    <record id="view_training_mission_form" model="ir.ui.view">
        <field name="name">training.mission.form</field>
        <field name="model">training.mission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="plan_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="total_hours"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tài liệu/Video">
                            <field name="material_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="file"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>