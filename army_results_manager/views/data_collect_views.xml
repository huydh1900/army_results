<odoo>
    <!-- ====================================================== -->
    <!-- 1️⃣  VIEW: DATA SOURCE (Nguồn thu thập) -->
    <!-- ====================================================== -->

    <!-- Tree View -->
    <record id="view_data_source_tree" model="ir.ui.view">
        <field name="name">data.source.tree</field>
        <field name="model">data.source</field>
        <field name="arch" type="xml">
            <tree string="Nguồn thu thập">
                <field name="name"/>
                <field name="source_type"/>
                <field name="url"/>
                <field name="last_collected"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_data_source_form" model="ir.ui.view">
        <field name="name">data.source.form</field>
        <field name="model">data.source</field>
        <field name="arch" type="xml">
            <form string="Nguồn thu thập">
                <header>
                    <!-- ✅ Nút thu thập thủ công -->
                    <button name="action_collect_now"
                            type="object"
                            string="Thu thập thủ công"
                            class="oe_highlight"
                            icon="fa-refresh"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="source_type"/>
                        <field name="category"/>
                        <field name="url"/>
                        <field name="active"/>
                        <field name="last_collected" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ====================================================== -->
    <!-- 2️⃣  VIEW: COLLECTED DATA (Dữ liệu thu thập) -->
    <!-- ====================================================== -->

    <!-- Tree View -->
    <record id="view_collected_data_tree" model="ir.ui.view">
        <field name="name">collected.data.tree</field>
        <field name="model">collected.data</field>
        <field name="arch" type="xml">
            <tree string="Dữ liệu thu thập" default_order="collected_date desc">
                <field name="name"/>
                <field name="category"/>
                <field name="source_id"/>
                <field name="collected_date"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_collected_data_form" model="ir.ui.view">
        <field name="name">collected.data.form</field>
        <field name="model">collected.data</field>
        <field name="arch" type="xml">
            <form string="Chi tiết dữ liệu thu thập">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="category"/>
                            <field name="source_id"/>
                            <field name="collected_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" placeholder="Mô tả chi tiết..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
