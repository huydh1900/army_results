<odoo>

    <record id="view_training_month_form" model="ir.ui.view">
        <field name="name">training.month.form</field>
        <field name="model">training.month</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="month_id" readonly="1"/>
                            <field name="month"/>
                        </group>
                        <group>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tuần huấn luyện">
                            <field name="week_ids">
                                <tree>
                                    <field name="week"/>
                                    <field name="total_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_training_week_form" model="ir.ui.view">
        <field name="name">training.week.form</field>
        <field name="model">training.week</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="week_id"/>
                            <field name="week"/>
                        </group>
                        <group>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ngày huấn luyện">
                            <field name="day_ids">
                                <tree editable="bottom">
                                    <field name="weekday"/>
                                    <field name="day"/>
                                    <field name="total_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>