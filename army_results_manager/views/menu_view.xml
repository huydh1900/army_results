<odoo>
    <data noupdate="0">

        <!-- Root Menu -->
        <menuitem id="menu_military_root" name="Quản lý huấn luyện bộ đội"/>

        <!-- Actions -->
        <record id="action_training_course" model="ir.actions.act_window">
            <field name="name">Khóa huấn luyện</field>
            <field name="res_model">training.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_training_competition" model="ir.actions.act_window">
            <field name="name">Hội thi</field>
            <field name="res_model">training.competition</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_training_content_template" model="ir.actions.act_window">
            <field name="name">Khung nội dung huấn luyện</field>
            <field name="res_model">training.content.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_training_section" model="ir.actions.act_window">
            <field name="name">Chương học phần</field>
            <field name="res_model">training.section</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_training_plan" model="ir.actions.act_window">
            <field name="name">Kế hoạch huấn luyện</field>
            <field name="res_model">training.plan</field>
            <field name="view_mode">tree,form,kanban,gantt</field>
        </record>

        <record id="hr_department_kanban_action_inherit" model="ir.actions.act_window">
            <field name="name">Đơn vị</field>
            <field name="res_model">hr.department</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="hr.view_department_filter"/>
        </record>

        <!-- Menu structure -->
        <menuitem id="menu_unit_management"
                  name="Quản lý Đơn vị"
                  parent="menu_military_root"/>

        <menuitem id="menu_list_of_units"
                  name="Danh sách Đơn vị"
                  parent="menu_unit_management"
                  action="hr_department_kanban_action_inherit"/>

        <menuitem id="menu_training_content_template"
                  name="Khung nội dung huấn luyện"
                  parent="menu_unit_management"
                  action="action_training_content_template"/>

        <menuitem id="menu_training_course"
                  name="Khóa huấn luyện"
                  parent="menu_unit_management"
                  action="action_training_course"/>

        <menuitem id="menu_training_section"
                  name="Danh sách các chương học phần"
                  parent="menu_unit_management"
                  action="action_training_section"/>

        <menuitem id="menu_training_competition"
                  name="Hội thi"
                  parent="menu_unit_management"
                  action="action_training_competition"/>

        <menuitem id="menu_training_mission"
                  name="Nhiệm vụ huấn luyện"
                  parent="menu_military_root"/>

        <record id="action_training_plan_tree" model="ir.actions.act_window">
            <field name="name">Kế hoạch huấn luyện</field>
            <field name="res_model">training.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_training_plan_tree"/>
        </record>

        <menuitem id="menu_training_plan"
                  name="Kế hoạch huấn luyện"
                  parent="menu_military_root"
                  action="action_training_plan"/>

    </data>
</odoo>
