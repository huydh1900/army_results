<odoo>
    <record id="view_training_course_tree" model="ir.ui.view">
        <field name="name">training.course.tree</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
<!--            <header>-->
<!--                <button name="%(action_print_word_wizard)d"-->
<!--                        string="In Phụ lục"-->
<!--                        type="action"-->
<!--                        class="btn-primary"/>-->
<!--            </header>-->
        </field>
    </record>

    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch huấn luyện">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="type_training" attrs="{'invisible':[('type','=','si_quan')]}"/>
                            <field name="year"/>
                            <field name="competition_id" attrs="{'invisible':[('type','=','si_quan')]}"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh sách nội dung huấn luyện" attrs="{'invisible':[('type','=','phan_doi')]}">
                            <field name="lesson_ids">
                                <tree>
                                    <field name="section_id"/>
                                    <field name="name"/>
                                    <field name="total_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>