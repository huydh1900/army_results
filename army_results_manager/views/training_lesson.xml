<odoo>
    <record id="view_training_lesson_form" model="ir.ui.view">
        <field name="name">training.lesson.form</field>
        <field name="model">training.lesson</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="section_id"/>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thời gian huấn luyện">
                            <field name="time_ids">
                                <tree>
                                    <field name="month"/>
                                    <field name="week"/>
                                    <field name="day"/>
                                    <field name="total_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>