<odoo>

    <record id="view_training_result_tree" model="ir.ui.view">
        <field name="name">training.result.tree</field>
        <field name="model">training.result</field>
        <field name="arch" type="xml">
            <tree string="Kết quả huấn luyện" create="false" editable="bottom">
                <field name="employee_id" options='{"no_open":True}'/>
                <field name="score"/>
                <field name="result"/>
                <field name="note"/>
                <button name="action_generate_note_by_ai"
                        type="object"
                        string="Nhận xét AI"
                        groups="army_results_manager.group_training_commander_assistant"
                        title="Tạo nhận xét bằng AI"/>
            </tree>
        </field>
    </record>

</odoo>
