<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kế thừa template TOTP gốc -->
    <template id="custom_auth_totp" inherit_id="auth_totp.auth_totp_form" name="Custom TOTP Login Page">
        <xpath expr="//div[@class='oe_login_form']" position="replace">
            <div class="o_login_page">
                <div class="custom_login_container">
                    <!-- Left Section -->
                    <div class="login_left_section">
                        <h1>XÁC THỰC HAI LỚP</h1>
                        <div class="subtitle">BẢO VỆ TÀI KHOẢN CỦA BẠN</div>
                        <p class="description">
                            Vui lòng nhập mã xác thực 6 chữ số từ ứng dụng TOTP (Google Authenticator, Authy, v.v.)
                        </p>
                    </div>

                    <!-- Right Section -->
                    <div class="login_right_section">
                        <div class="custom_login_card">
                            <h2>Nhập mã bảo mật</h2>
                            <form action="/web/login/totp" method="post">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="form-group">
                                    <label for="totp_token">Mã xác thực *</label>
                                    <input type="text" name="totp_token" id="totp_token" placeholder="Nhập mã 6 số"
                                           required="required"/>
                                </div>

                                <t t-if="error">
                                    <p class="alert alert-danger" role="alert">
                                        <t t-esc="error"/>
                                    </p>
                                </t>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary w-100">Xác nhận</button>
                                </div>

                                <div class="forgot_password">
                                    <a href="/web/login">Quay lại trang đăng nhập</a>
                                </div>
                            </form>
                        </div>

                        <div class="login_footer">
                            © 2025 Hệ thống quản lý quân nhân - Cục Quân Huấn.
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="custom_auth_reset_password" inherit_id="auth_signup.reset_password" name="Custom Reset Password Page">
        <xpath expr="//div[t-if='message'] | //form" position="replace">
            <div class="o_login_page">
                <div class="custom_login_container">
                    <!-- Left Section -->
                    <div class="login_left_section">
                        <h1>KHÔI PHỤC MẬT KHẨU</h1>
                        <div class="subtitle">HỆ THỐNG QUẢN LÝ HUẤN LUYỆN BỘ ĐỘI</div>
                        <p class="description">
                            Nếu bạn quên mật khẩu, hãy nhập email của bạn để nhận liên kết đặt lại mật khẩu mới.
                        </p>
                    </div>

                    <!-- Right Section -->
                    <div class="login_right_section">
                        <div class="custom_login_card">
                            <h2>Đặt lại mật khẩu</h2>

                            <!-- Thông báo thành công -->
                            <div t-if="message" class="oe_login_form text-center">
                                <p class="alert alert-success" role="status">
                                    <t t-esc="message"/>
                                </p>
                                <a href="/web/login" class="btn btn-link mt-2">Quay lại trang đăng nhập</a>
                            </div>

                            <!-- Form nhập email hoặc mật khẩu mới -->
                            <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <t t-if="token and not invalid_token">
                                    <t t-call="auth_signup.fields">
                                        <t t-set="only_passwords" t-value="1"/>
                                    </t>
                                </t>

                                <t t-if="not token">
                                    <div class="form-group">
                                        <label for="login">Email của bạn *</label>
                                        <input type="text"
                                               name="login"
                                               id="login"
                                               placeholder="Nhập email đăng ký"
                                               required="required"
                                               t-att-value="login"
                                               autofocus="autofocus"/>
                                    </div>
                                </t>

                                <t t-if="error">
                                    <p class="alert alert-danger" role="alert">
                                        <t t-esc="error"/>
                                    </p>
                                </t>

                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                <input type="hidden" name="token" t-att-value="token"/>

                                <div class="form-group mt-3">
                                    <button type="submit" class="btn btn-primary w-100">Đặt lại mật khẩu</button>
                                </div>

                                <div class="d-flex justify-content-between small mt-3">
                                    <a t-if="not token" href="/web/login">Quay lại đăng nhập</a>
                                    <a t-if="invalid_token" href="/web/login">Thử lại</a>
                                </div>
                            </form>
                        </div>

                        <div class="login_footer">
                            © 2025 Hệ thống quản lý quân nhân - Cục Quân Huấn.
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
