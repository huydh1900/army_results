<odoo>
    <record id="view_training_competition_tree" model="ir.ui.view">
        <field name="name">training.competition.tree</field>
        <field name="model">training.competition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_training_competition_form" model="ir.ui.view">
        <field name="name">training.competition.form</field>
        <field name="model">training.competition</field>
        <field name="arch" type="xml">
            <form string="Hội thi">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="year"/>
                            <field name="total_hours"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Giai đoạn huấn luyện">
                            <field name="phase_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="total_hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>