<odoo>
    <record id="view_camera_video_form" model="ir.ui.view">
        <field name="name">camera.video.form</field>
        <field name="model">camera.video</field>
        <field name="arch" type="xml">
            <form string="Camera Video">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="camera_id"/>
                        <field name="filepath" readonly="1"/>
                        <field name="filesize" readonly="1"/>
                    </group>

                    <footer>
                        <button string="Download"
                                name="action_download"
                                type="object"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>




</odoo>