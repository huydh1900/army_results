<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="army_res_users_view_form_profile_inherit" model="ir.ui.view">
            <field name="name">res.users.preferences.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
            <field name="arch" type="xml">
                <page name="public" position="attributes">
                    <attribute name="invisible">1</attribute>
                </page>
                <page name="personal_information" position="attributes">
                    <attribute name="invisible">1</attribute>
                </page>
                <page name="hr_settings" position="attributes">
                    <attribute name="invisible">1</attribute>
                </page>
            </field>
        </record>

        <record id="army_view_users_form_inherit" model="ir.ui.view">
            <field name="name">army.view.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <page name="preferences" position="after">
                    <page name="Chữ ký">
                        <group>
                            <field name="signature_file" filename="signature_filename" widget="binary" string="File chữ ký"/>
                            <field name="signature_filename" invisible="1"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</odoo>
