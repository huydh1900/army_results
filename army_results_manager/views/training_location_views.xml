<odoo>
    <record id="view_training_location_tree" model="ir.ui.view">
        <field name="name">training.location.tree</field>
        <field name="model">training.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_training_location_form" model="ir.ui.view">
        <field name="name">training.location.form</field>
        <field name="model">training.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location_setting"/>
                    </group>

                    <notebook>
                        <page string="Danh sách các camera">
                            <field name="camera_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
