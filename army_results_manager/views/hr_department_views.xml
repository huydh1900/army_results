<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_department_tree_inherit" model="ir.ui.view">
            <field name="name">hr.department.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <field name="total_employee" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="manager_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="company_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="display_name" position="attributes">
                    <attribute name="string">Tên đơn vị</attribute>
                </field>
                <field name="display_name" position="after">
                    <field name="province_id"/>
                </field>
            </field>
        </record>

        <record id="view_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <button name="action_plan_from_department" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <xpath expr="//form/sheet/div/button[@name='%(hr.act_employee_from_department)d']" position="replace">
                    <button class="oe_stat_button" type="object" name="action_view_commanding_officer"
                            icon="fa-users">
                        <field string="CB chỉ huy" name="commanding_officer_count" widget="statinfo"/>
                    </button>

                    <button class="oe_stat_button" type="object" name="action_view_training_officer"
                            icon="fa-users">
                        <field string="CB phụ trách huấn luyện" name="training_officer_count" widget="statinfo"/>
                    </button>

                    <button class="oe_stat_button" type="object" name="action_view_training_course"
                            icon="fa-users">
                        <field string="Khóa huấn luyện" name="training_course_count" widget="statinfo"/>
                    </button>
                </xpath>
                <field name="name" position="attributes">
                    <attribute name="string">Tên đơn vị</attribute>
                </field>
                <field name="name" position="after">
                    <field name="province_id"/>
                </field>
                <field name="manager_id" position="attributes">
                    <attribute name="string">Thủ trưởng đơn vị</attribute>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="string">Đơn vị cha</attribute>
                </field>
                <xpath expr="//form/sheet/group/field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_department_search_inherit" model="ir.ui.view">
            <field name="name">hr.department.search.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_filter"/>
            <field name="arch" type="xml">
                <!-- Thay thế search cũ bằng search mới -->
                <search position="replace">
                    <search string="Departments">
                        <!-- Các field tìm kiếm -->
                        <field name="name" string="Tên đơn vị"/>
                        <field name="province_id" string="Địa điểm"/>
                        
                        <!-- Separator -->
                        <separator/>
                        
                        <!-- Filter Archived -->
                        <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                        
                        <!-- Group By -->
                        <group expand="0" string="Group By">
                            <filter name="group_name" string="Tên đơn vị" 
                                    context="{'group_by':'name'}"/>
                            <filter name="group_province" string="Địa điểm" 
                                    context="{'group_by':'province_id'}"/>
                        </group>
                    </search>
                </search>
            </field>
        </record>

    </data>
</odoo>
