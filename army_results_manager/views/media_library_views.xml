<odoo>
    <!-- FORM VIEW -->
    <record id="view_media_library_form" model="ir.ui.view">
        <field name="name">media.library.form</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <form string="Media">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên file..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="media_type" widget="radio"/>
                        </group>
                        <group attrs="{'invisible': [('media_type','=','video')]}">
                            <field name="mimetype" readonly="1"/>
                            <field name="filesize" widget="integer" readonly="1"/>
                        </group>
                    </group>

                    <!-- UPLOAD ẢNH -->
                    <group string="Upload Ảnh" attrs="{'invisible': [('media_type','!=','image')]}">
                        <field name="upload_file" filename="upload_filename"/>
                        <field name="upload_filename" invisible="1"/>
                        <field name="attachment_id" readonly="1"/>
                    </group>

                    <group string="Link Download" attrs="{'invisible': [('media_type','=','video')]}">
                        <field name="file_url" widget="url" readonly="1"/>
                    </group>

                    <!-- PREVIEW ẢNH -->
                    <group string="Preview" attrs="{'invisible': [('media_type','!=','image')]}">
                        <field name="data" widget="image" nolabel="1"
                               options="{'size': [800, 600]}"
                               style="max-width: 100%;"/>
                    </group>

                    <!-- PREVIEW VIDEO -->
                    <group string="Preview Video" attrs="{'invisible': [('media_type','!=','video')]}">
                            <field name="upload_file" widget="video" filename="filename"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_media_library_tree" model="ir.ui.view">
        <field name="name">media.library.tree</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <tree string="Media Files">
                <field name="name"/>
                <field name="media_type"/>
                <field name="filesize" widget="integer" string="Kích thước"
                       attrs="{'invisible': [('media_type','=','video')]}"/>
                <field name="mimetype" attrs="{'invisible': [('media_type','=','video')]}"/>
                <field name="file_url" widget="url" string="Link"
                       attrs="{'invisible': [('media_type','=','video')]}"/>
                <field name="video_url" widget="url" string="Video URL"
                       attrs="{'invisible': [('media_type','=','image')]}"/>
                <field name="create_date" string="Ngày tạo"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_media_library" model="ir.actions.act_window">
        <field name="name">Thư viện Media</field>
        <field name="res_model">media.library</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo media mới
            </p>
            <p>
                Upload ảnh hoặc thêm video URL vào thư viện
            </p>
        </field>
    </record>

</odoo>