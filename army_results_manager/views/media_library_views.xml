<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_media_library_tree" model="ir.ui.view">
        <field name="name">media.library.tree</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="camera_id"/>
                <field name="location_id"/>
                <field name="write_date" string="Thời gian ghi nhận"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_media_library_form" model="ir.ui.view">
        <field name="name">media.library.form</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <form string="Media Library">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="location_id"/>
                            <field name="camera_id"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_media_library_kanban" model="ir.ui.view">
        <field name="name">media.library.kanban</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record o_kanban_card #{record.active?.value ? 'active' : 'inactive'}">
                            <!-- Content -->
                            <div class="o_kanban_details" style="padding:5px;">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    Khu vực:
                                    <field name="location_id"/>
                                </div>
                                <div>
                                    Camera:
                                    <field name="camera_id"/>
                                </div>
                                <div>
                                    Thời gian ghi nhận:
                                    <field name="write_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- SEARCH VIEW -->
    <record id="view_media_library_search" model="ir.ui.view">
        <field name="name">media.library.search</field>
        <field name="model">media.library</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="camera_id"/>
                <field name="location_id"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_camera"
                            string="Camera"
                            context="{'group_by':'camera_id'}"/>

                    <filter name="group_by_location"
                            string="Địa điểm"
                            context="{'group_by':'location_id'}"/>
                </group>
            </search>
        </field>
    </record>


</odoo>
