<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_training_schedule_form" model="ir.ui.view">
        <field name="name">training.schedule.form</field>
        <field name="model">training.schedule</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch huấn luyện">

                <!-- STATUS BAR -->
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,posted,to_modify,approved,cancel"/>

                    <button name="action_approve" string="Duyệt" type="object"
                            class="btn-primary"
                            states="posted"/>

                    <!-- Người lập gửi duyệt -->
                    <button name="action_submit" string="Gửi duyệt" type="object"
                            class="oe_highlight"
                            group="army_results_manager.group_admin,army_results_manager.group_data_entry_officer"
                            states="draft,to_modify"/>

                    <button name="action_need_edit"
                        string="Yêu cầu chỉnh sửa"
                        type="object"
                        states="posted"
                        class="btn-warning"
                        groups="army_results_manager.group_admin,army_results_manager.group_training_commander,army_results_manager.group_data_entry_officer"/>

                    <button name="action_cancel"
                            string="Hủy"
                            type="object"
                            states="posted,to_modify"
                            groups="army_results_manager.group_data_entry_officer,army_results_manager.group_admin"
                            confirm="Bạn có chắc muốn Hủy kế hoạch này?"
                            class="btn-danger"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="plan_type"/>

                            <field name="year"/>

                            <!-- MONTH -->
                            <field name="month_number"
                                   attrs="{'invisible': [('plan_type','=','year')]}"/>

                            <!-- WEEK -->
                            <field name="week_number"
                                   attrs="{'invisible': [('plan_type','!=','week')]}"/>
                            <field name="description"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_days" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Khóa huấn luyện">
                            <field name="plan_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Lý do chỉnh sửa">
                            <field name="description"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_training_schedule_tree" model="ir.ui.view">
        <field name="name">training.schedule.tree</field>
        <field name="model">training.schedule</field>
        <field name="arch" type="xml">
            <tree string="Kế hoạch huấn luyện">

                <field name="name"/>
                <field name="plan_type"/>
                <field name="year"/>
                <field name="month_number"/>
                <field name="week_number"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration_days"/>

                <!-- STATE với màu pill -->
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-warning="state == 'to_modify'"
                       decoration-info="state == 'posted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancel'"
                />

            </tree>
        </field>
    </record>

</odoo>
