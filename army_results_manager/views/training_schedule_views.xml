<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_training_schedule_form" model="ir.ui.view">
        <field name="name">training.schedule.form</field>
        <field name="model">training.schedule</field>
        <field name="arch" type="xml">

            <form string="Kế hoạch huấn luyện">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,posted,to_modify,approved,cancel"/>

                    <button name="action_approve" string="Duyệt" type="object"
                            class="btn-primary"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander"
                            states="posted"/>

                    <button name="action_submit" string="Gửi duyệt" type="object"
                            class="oe_highlight"
                            groups="army_results_manager.group_admin,army_results_manager.group_data_entry_officer"
                            states="draft,to_modify"/>

                    <button name="action_need_edit"
                            string="Yêu cầu chỉnh sửa"
                            type="object"
                            states="posted"
                            class="btn-warning"
                            groups="army_results_manager.group_admin,army_results_manager.group_training_commander,army_results_manager.group_data_entry_officer"/>

                    <button name="action_cancel"
                            string="Hủy"
                            type="object"
                            states="posted,to_modify"
                            groups="army_results_manager.group_data_entry_officer,army_results_manager.group_admin"
                            confirm="Bạn có chắc muốn Hủy kế hoạch này?"
                            class="btn-danger"/>

                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_camera"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                attrs="{'invisible': [('camera_count', '=', 0)]}"
                                string="Mở camera"
                                >
                            <field name="camera_count" widget="statinfo" string="Camera"/>
                        </button>
                        <button name="action_open_training_day"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                attrs="{'invisible': [('state', '!=', 'approved')]}"
                                string="Chi tiết bài học"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                            <field name="plan_type" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                            <field name="year" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>

                            <field name="month_number"
                                   attrs="{
                                   'readonly': [('state','in',['approved','posted'])],
                                   'invisible': [('plan_type','=','year')]
                               }"/>

                            <field name="week_number"
                                   attrs="{
                                   'readonly': [('state','in',['approved','posted'])],
                                   'invisible': [('plan_type','!=','week')]
                               }"/>
                            <field name="location" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                            <field name="description" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                        </group>

                        <group>
                            <field name="start_date" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                            <field name="end_date" attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                            <field name="duration_days" readonly="1"/>
                            <field name="approver_id" options='{"no_create": True, "no_open": True}'
                                   attrs="{'readonly': [('state','in',['approved','posted'])]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Khóa huấn luyện">
                            <field name="plan_ids" attrs="{'readonly': [('state','in',['approved','posted'])]}">
                                <tree>
                                    <field name="plan_code"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Lý do chỉnh sửa">
                            <field name="reason_modify"/>
                        </page>
                    </notebook>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>

            </form>

        </field>
    </record>

    <record id="view_training_schedule_search" model="ir.ui.view">
        <field name="name">training.schedule.search</field>
        <field name="model">training.schedule</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm kế hoạch huấn luyện">

                <!-- Tìm nhanh -->
                <field name="name" string="Tên kế hoạch"/>
                <field name="year" string="Năm"/>
                <field name="month_number" string="Tháng"/>
                <field name="week_number" string="Tuần"/>
                <field name="location" string="Địa điểm"/>
                <field name="start_date" string="Ngày bắt đầu"/>
                <field name="end_date" string="Ngày kết thúc"/>

                <!-- Bộ lọc nhanh -->
                <filter name="filter_draft"
                        string="Soạn thảo"
                        domain="[('state','=','draft')]"/>

                <filter name="filter_posted"
                        string="Chờ duyệt"
                        domain="[('state','=','posted')]"/>

                <filter name="filter_approved"
                        string="Đã duyệt"
                        domain="[('state','=','approved')]"/>

                <separator/>

                <filter name="filter_week"
                        string="Kế hoạch tuần"
                        domain="[('plan_type','=','week')]"/>

                <filter name="filter_month"
                        string="Kế hoạch tháng"
                        domain="[('plan_type','=','month')]"/>

                <filter name="filter_year"
                        string="Kế hoạch năm"
                        domain="[('plan_type','=','year')]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_year"
                            string="Năm"
                            context="{'group_by':'year'}"/>

                    <filter name="group_by_plan_type"
                            string="Loại kế hoạch"
                            context="{'group_by':'plan_type'}"/>

                    <filter name="group_by_month"
                            string="Tháng"
                            context="{'group_by':'month_number'}"/>

                    <filter name="group_by_week"
                            string="Tuần"
                            context="{'group_by':'week_number'}"/>

                    <filter name="group_by_state"
                            string="Trạng thái"
                            context="{'group_by':'state'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_training_schedule_tree" model="ir.ui.view">
        <field name="name">training.schedule.tree</field>
        <field name="model">training.schedule</field>
        <field name="arch" type="xml">
            <tree string="Kế hoạch huấn luyện">

                <field name="name"/>
                <field name="plan_type"/>
                <field name="year"/>
                <field name="month_number"/>
                <field name="week_number"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="approver_id"/>

                <!-- STATE với màu pill -->
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-warning="state == 'to_modify'"
                       decoration-info="state == 'posted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancel'"
                />

            </tree>
        </field>
    </record>

</odoo>
