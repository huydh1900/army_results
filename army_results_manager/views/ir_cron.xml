<odoo>
    <data noupdate="1">
        <record id="ir_cron_training_daily_warning" model="ir.cron">
            <field name="name">Tạo cảnh báo hằng ngày</field>
            <field name="model_id" ref="model_training_plan"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_daily_warning()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 07:00:00')" />
        </record>
    </data>
</odoo>
