<odoo>

    <record id="training_course_rule_admin" model="ir.rule">
        <field name="name">Admin: Xem all khóa huấn luyện</field>
        <field name="model_id" ref="army_results_manager.model_training_course"/>
        <field name="groups" eval="[(4, ref('army_results_manager.group_admin'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!--    CBCH chỉ xem được những khóa huấn luyện chính họ duyệt-->
    <record id="training_course_rule_commander" model="ir.rule">
        <field name="name">CBCH chỉ xem được những khóa huấn luyện chính họ duyệt</field>
        <field name="model_id" ref="army_results_manager.model_training_course"/>
        <field name="groups" eval="[(4, ref('army_results_manager.group_training_commander'))]"/>
        <field name="domain_force">[('approver_id.user_id', '=', user.id)]</field>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>

    <record id="training_course_rule_commander_assistant" model="ir.rule">
        <field name="name">CB phụ trách hl chỉ xem được những khóa huấn luyện gắn tên họ</field>
        <field name="model_id" ref="army_results_manager.model_training_course"/>
        <field name="groups" eval="[(4, ref('army_results_manager.group_training_commander_assistant'))]"/>
        <field name="domain_force">[('training_officer_ids.user_id', '=', user.id)]</field>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>

</odoo>