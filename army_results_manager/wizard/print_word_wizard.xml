<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_print_word_wizard_form" model="ir.ui.view">
        <field name="name">print.word.wizard.form</field>
        <field name="model">print.word.wizard</field>
        <field name="arch" type="xml">
            <form string="Báo cáo tổng hợp huấn luyện">
                <group>
                    <field name="type_action"/>
                    <field name="report_type" attrs="{'invisible':[('type_action','=','send_report')]}"/>
                    <field name="year" attrs="{'invisible':[('type_action','=','send_report')]}"/>
                    <field name="month"
                           attrs="{'invisible':['|', ('report_type','=','year'), ('type_action','=','send_report')]}"/>
                    <field name="week"
                           attrs="{'invisible':['|',('type_action','=','send_report'), ('report_type','!=','week')]}"/>
                    <field name="approver_id" attrs="{'invisible':[('type_action','!=','send_report')]}"/>
                    <field name="attachment_ids" attrs="{'invisible':[('type_action','!=','send_report')]}"
                           widget="many2many_binary" class="o_social_post_form_attachments"/>
                </group>
                <footer>
                    <button string="In" attrs="{'invisible':[('type_action','=','send_report')]}" type="object"
                            name="action_print_word" class="btn-primary"/>
                    <button string="Gửi duyệt" attrs="{'invisible':[('type_action','!=','send_report')]}" type="object"
                            name="action_send_report" class="btn-success"/>
                    <button string="Hủy" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_print_word_wizard" model="ir.actions.act_window">
        <field name="name">In Word</field>
        <field name="res_model">print.word.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
