<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_approved_wizard_form" model="ir.ui.view">
        <field name="name">approved.wizard.form</field>
        <field name="model">approved.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="report_type"/>
                    <field name="week"
                           attrs="{'invisible':[('report_type','!=','week')], 'required':[('report_type','=','week')]}"/>
                    <field name="month"
                           attrs="{'invisible':[('report_type','=','year')], 'required':[('report_type','in',['month','week'])]}"/>
                    <field name="year"/>
                </group>
                <footer>
                    <button string="Duyệt" type="object" name="action_approved" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_approved_wizard" model="ir.actions.act_window">
        <field name="name">Duyệt kế hoạch</field>
        <field name="res_model">approved.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
