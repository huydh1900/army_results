<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_modify_reason_wizard_form" model="ir.ui.view">
        <field name="name">modify.reason.wizard.form</field>
        <field name="model">modify.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Nhập lý do chỉnh sửa">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
