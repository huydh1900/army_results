<t t-name="camera_fullscreen_view" owl="1">
    <div class="camera-container">
        <div class="camera-grid"
             t-att-data-rows="this.props.action.params.rows"
             t-att-style="`
                --rows:${this.props.action.params.rows};
                --cols:${this.props.action.params.cols};
             `">

            <t t-set="cams" t-value="this.props.action?.params?.cameras || []"/>
            <t t-foreach="cams" t-as="cam" t-key="cam.id or cam.stream_url">

                <t t-if="!cam.empty">
                    <div class="camera-item">
                        <img t-att-src="cam.mjpeg_url" class="camera-img"/>
                        <button class="open-camera-btn"
                                t-on-click="() => this.openCamera(cam)">üîç</button>
                    </div>
                </t>

                <t t-if="cam.empty">
                    <div class="camera-item camera-empty">
                        <div class="camera-empty-content">
                            <span>‚ùå Kh√¥ng c√≥ camera</span>
                        </div>
                    </div>
                </t>

            </t>
        </div>
    </div>
</t>
