<t t-name="camera_fullscreen_view" owl="1">
    <div class="camera-container">
        <t t-foreach="this.props.action.params.pages" t-as="page" t-key="page[0].id">
            <div class="camera-page"
                 t-att-style="`
                    --rows: ${this.props.action.params.rows};
                    --cols: ${this.props.action.params.cols};
                 `">
                <t t-foreach="page" t-as="cam" t-key="cam.id">
                    <div t-if="!cam.empty" class="camera-item">
                        <img t-att-src="cam.mjpeg_url" class="camera-img"/>
                        <button class="open-camera-btn" t-on-click="() => this.openCamera(cam)">üîç</button>
                    </div>
                    <div t-else="" class="camera-item camera-empty">
                        <div class="camera-empty-content">‚ùå Kh√¥ng c√≥ camera</div>
                    </div>
                </t>
            </div>
        </t>
    </div>
</t>

